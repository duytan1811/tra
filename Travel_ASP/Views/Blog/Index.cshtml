@using System.Globalization;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
    var blogs = ViewData["Blogs"] as List<Blog>;
    var loopIndex = 1;
}

<div class="card">
    <div class="card-body">
        <a asp-action="CreateOrEdit" asp-controller="Blog" asp-route-param="null" class="btn btn-primary mb-3">Thêm bài viết</a>
        <div class="adv-table table-responsive">
            <table class="display table table-bordered table-striped data-table">
                <thead class="bg-info text-white">
                    <tr>
                        <th>#</th>
                        <th>Hình ảnh</th>
                        <th>Tiêu đề</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in blogs)
                    {
                        <tr>
                            <th>@loopIndex</th>
                            <th>
                                <img src="/uploads/@blog.Image" height="80px" width="150px" alt="@blog.Name" />
                            </th>
                            <th>@blog.Name</th>
                            <th>
                                <a asp-action="CreateOrEdit" asp-controller="Blog" asp-route-id="@blog.Id" class="btn btn-sm btn-success d-inline-block">Sửa</a>
                                <form class="d-inline-block" method="Post" asp-action="Delete" asp-controller="Blog" asp-route-id="@blog.Id">
                                    <button class="btn btn-sm btn-danger" type="submit">Xóa</button>
                                </form>
                            </th>
                        </tr>
                        loopIndex++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

