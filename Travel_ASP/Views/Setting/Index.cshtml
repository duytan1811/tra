@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
    var message = ViewData["Message"] as string;
}

@model Travel_ASP.ViewModels.SettingViewModel

<div class="card">
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-success">
                    @message
                </div>
            </div>
        </div>
    }
    <form asp-action="Save" asp-controller="Setting" method="POST" enctype="multipart/form-data">
        <div class="card-body">
            <div class="block-content">
                <div class="row">
                    <div class="form-group col-md-6 mt-20">
                        <label class="col-md-12">
                            Ảnh tour mặc định
                        </label>
                        <div class="col-md-12">
                            <input type="file" asp-for="DefaultTourImage" class="dropify">
                        </div>
                    </div>
                    <div class="form-group col-md-6 mt-20">
                        <label class="col-md-12">
                            Ảnh bài viết mặc định
                        </label>
                        <div class="col-md-12">
                            <input type="file" asp-for="DefaultBlogImage" class="dropify">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12 mt-20">
                        <label class="col-md-12">
                            Tên website
                        </label>
                        <div class="form-material col-md-12">
                            <input type="text" asp-for="AppName" class="form-control"
                                   placeholder="Tên website">
                        </div>
                    </div>
                    <div class="form-group col-md-12 mt-20">
                        <label class="col-md-12">
                            Email
                        </label>
                        <div class="form-material col-md-12">
                            <input type="email" asp-for="Email" class="form-control"
                                   placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group col-md-12 mt-20">
                        <label class="col-md-12">
                            Số điện thoại
                        </label>
                        <div class="form-material col-md-12">
                            <input type="number" asp-for="Phone" class="form-control"
                                   placeholder="Số điện thoại">
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <div class="col-md-12 mb-20">
                <a  asp-action="Index" asp-controller="Dashboard" class="btn btn-danger">
                   Hủy bỏ
                </a>
                <button class="btn btn-primary" type="submit">Cập nhật</button>
            </div>
        </div>
    </form>
</div>

